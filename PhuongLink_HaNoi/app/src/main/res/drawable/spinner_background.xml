<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền giống EditText -->
    <solid android:color="#F4F4F4" />
    <!-- Viền outline màu xám nhạt -->
    <stroke
        android:width="1dp"
        android:color="#AAAAAA" />
    <!-- Bo góc 6dp -->
    <corners android:radius="6dp" />
    <!-- Padding bên trong để text không sát viền -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
