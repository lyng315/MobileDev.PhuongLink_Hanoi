@model WebApplication1.Models.Dtos.PostCategoryDto
@{
    ViewData["Title"] = "Chỉnh Sửa Danh Mục Tin";
}

<h2>@ViewData["Title"]</h2>

<form asp-area="Admin" asp-controller="PostCategory" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Tên danh mục</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-area="Admin" asp-controller="PostCategory" asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
</form>
