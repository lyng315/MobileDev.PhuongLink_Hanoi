@model WebApplication1.Models.Dtos.RegionDto
@{
    ViewData["Title"] = "Sửa Phường/Xã";
}

<h2>@ViewData["Title"]</h2>

<form asp-area="Admin" asp-controller="Region" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">Phường/Xã</label>
        <input asp-for="Ward" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Quận/Huyện</label>
        <input asp-for="District" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>
