@model IEnumerable<WebApplication1.Models.Dtos.RegionDto>
@{
    ViewData["Title"] = "Danh Sách Khu Vực";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-area="Admin" asp-controller="Region" asp-action="Create" class="btn btn-success">
        Thêm Khu Vực
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Name</td>
                <td>
                    <a asp-area="Admin" asp-controller="Region" asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-warning">Sửa</a>
                    <form asp-area="Admin" asp-controller="Region" asp-action="Delete" asp-route-id="@r.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Xác nhận xóa khu vực này?');">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
