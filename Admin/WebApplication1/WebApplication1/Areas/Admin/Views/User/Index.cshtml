@model IEnumerable<WebApplication1.Models.Dtos.UserDto>
@{
    ViewData["Title"] = "Danh Sách Người Dùng";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-area="Admin" asp-controller="User" asp-action="Create" class="btn btn-success">Thêm Người Dùng</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Họ Tên</th>
            <th>Điện Thoại</th>
            <th>Khu Vực</th>
            <th>Vai Trò</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Email</td>
                <td>@u.FullName</td>
                <td>@u.PhoneNumber</td>
                <td>@u.RegionId</td>
                <td>@u.RoleId</td>
                <td>
                    <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-warning">Sửa</a>
                    <form asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@u.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Xác nhận xóa?');">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
