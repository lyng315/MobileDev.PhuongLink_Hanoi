<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>

    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css"  asp-append-version="true"/>

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .layout-wrapper {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .sidebar-fixed {
            width: 250px;
            background-color: #fff;
            border-right: 1px solid #dee2e6;
            padding: 1rem;
            overflow-y: auto;
        }

        .main-area {
            flex: 1;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .navbar-fixed {
            height: 60px;
            background-color: #0d6efd;
            color: #fff;
            padding: 0 1rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-shrink: 0;
        }

        .content-scrollable {
            flex: 1;
            overflow-y: auto;
            padding: 1rem;
            background-color: #f8f9fa;
        }
    </style>

    <style>
        .nav-link.bg-light {
            background-color: #e7f1ff !important;
            color: #0d6efd !important;
            font-weight: 600;
            border-radius: 0.375rem;
            box-shadow: 0 0 5px rgba(0,0,0,0.05);
        }
    </style>
    @RenderSection("Styles", required: false)

</head>
<body>
    <div class="layout-wrapper">
        <!-- Sidebar -->
        <nav class="sidebar-fixed">
            <h5 class="fw-bold mb-4 text-primary">
                <i class="bi bi-bank"></i> PhuongLink HaNoi
            </h5>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "bg-light fw-semibold rounded shadow-sm text-primary" : "")" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-house-door me-2"></i> Trang chủ
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Posts" ? "bg-light fw-semibold rounded shadow-sm text-primary" : "")" asp-area="Admin" asp-controller="Posts" asp-action="Index">
                        <i class="bi bi-file-earmark-text me-2"></i> Quản lý Bài viết
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "PostCategory" ? "bg-light fw-semibold rounded shadow-sm text-primary" : "")" asp-area="Admin" asp-controller="PostCategory" asp-action="Index">
                        <i class="bi bi-list-ul me-2"></i> Quản lý Danh mục
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Region" ? "bg-light fw-semibold rounded shadow-sm text-primary" : "")" asp-area="Admin" asp-controller="Region" asp-action="Index">
                        <i class="bi bi-geo-alt me-2"></i> Quản lý Khu vực
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Comment" ? "bg-light fw-semibold rounded shadow-sm text-primary" : "")" asp-area="Admin" asp-controller="Comment" asp-action="Index">
                        <i class="bi bi-chat-left-text me-2"></i> Quản lý Bình luận
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "NotificationHistory" ? "bg-light fw-semibold rounded shadow-sm text-primary" : "")" asp-area="Admin" asp-controller="NotificationHistory" asp-action="Index">
                        <i class="bi bi-bell me-2"></i> Quản lý Thông báo
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "User" ? "bg-light fw-semibold rounded shadow-sm text-primary" : "")" asp-area="Admin" asp-controller="User" asp-action="Index">
                        <i class="bi bi-people me-2"></i> Quản lý Người dùng
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Statistical" ? "bg-light fw-semibold rounded shadow-sm text-primary" : "")" asp-area="Admin" asp-controller="Statistical" asp-action="Index">
                        <i class="bi bi-bar-chart-line me-2"></i> Thống kê
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" ? "bg-light fw-semibold rounded shadow-sm text-primary" : "")" asp-area="Admin" asp-controller="Profile" asp-action="Index">
                        <i class="bi bi-bar-chart-line me-2"></i> Hồ sơ
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Area -->
        <div class="main-area">
            <!-- Navbar -->
            <div class="navbar-fixed">
                <span class="fw-bold fs-5">@ViewData["Title"]</span>
                <div class="d-flex align-items-center gap-2">
                    <span>Trần Dung</span>
                    <div class="bg-white text-primary fw-semibold rounded-circle d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                        TD
                    </div>
                </div>
            </div>

            <!-- Scrollable Content -->
            <div class="content-scrollable">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/collapse.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
