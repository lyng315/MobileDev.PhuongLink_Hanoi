@model IEnumerable<WebApplication1.Models.Dtos.NotificationHistoryDto>

@{
    ViewData["Title"] = "Quản lý Thông Báo";
    var stt = 0;
}

<h2 class="fw-bold text-dark mb-4">@ViewData["Title"]</h2>

<div class="custom-table-container">
    <table class="table custom-table table-hover">
        <thead class="table-light">
            <tr>
                <th style="width: 5%;">#</th>
                <th style="width: 20%;">Bài Viết</th>
                <th style="width: 20%;">Người Nhận</th>
                <th style="width: 20%;">Thời Gian Gửi</th>
                <th style="width: 15%;">Trạng Thái</th>
                <th style="width: 20%;">Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var n in Model)
            {
                <tr>
                    <td>@(++stt)</td>
                    <td>@n.PostTitle</td>
                    <td>@n.RecipientId</td>
                    <td>@n.SentAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @if (n.Status == "Failed")
                        {
                            <span class="badge bg-danger"><i class="bi bi-x-circle me-1"></i> Thất bại</span>
                        }
                        else if (n.Status == "Sent")
                        {
                            <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i> Đã gửi</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@n.Status</span>
                        }
                    </td>
                    <td>
                        <form asp-area="Admin" asp-controller="NotificationHistory" asp-action="Delete" asp-route-id="@n.NotificationId"
                              method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('Bạn có chắc chắn muốn xóa thông báo này?');">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
