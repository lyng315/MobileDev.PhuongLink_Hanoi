@model IEnumerable<WebApplication1.Models.Dtos.UserDto>

@{
    ViewData["Title"] = "Quản lý Người dùng";
    var stt = 0;
}

<h2 class="fw-bold text-dark mb-4">@ViewData["Title"]</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-area="Admin" asp-controller="User" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Tạo mới
    </a>
</div>
<div class="custom-table-container">
<table class="table custom-table">
    <thead class="table-light">
        <tr>
            <th style="width: 5%;">ID</th>
            <th style="width: 18%;">Họ tên</th>
            <th style="width: 20%;">Email</th>
            <th style="width: 12%;">Vai trò</th>
            <th style="width: 12%;">Khu vực</th>
            <th style="width: 10%;">Trạng thái</th>
            <th style="width: 12%;">Ngày đăng ký</th>
            <th style="width: 16%;">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@(++stt)</td>
                <td>@u.FullName</td>
                <td>@u.Email</td>
                <td>@u.RegionId</td>
                <td>@u.RoleId</td>
                <td>
                    @if (u.IsVerifiedResident)
                    {
                        <span class="text-success fw-semibold">Hoạt động</span>
                    }
                    else
                    {
                        <span class="text-secondary">Chưa xác thực</span>
                    }
                </td>
                <td>@u.CreatedAt.ToDateTime().ToString("dd/MM/yyyy")</td>
                <td>
                        <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-outline-primary me-1" title="Xem">
                            <i class="bi bi-eye"></i>
                        </a>
                    <form asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@u.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa"
                                onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
