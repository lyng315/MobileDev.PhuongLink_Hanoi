<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>

    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/admin.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="bg-dark text-white vh-100 p-3" style="width:250px">
            <h4 class="text-white">Admin Panel</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="User" asp-action="Index">
                        Quản lý Người dùng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Region" asp-action="Index">
                        Quản lý Khu vực
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="PostCategory" asp-action="Index">
                        Quản lý Danh mục
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Comment" asp-action="Index" class="nav-link text-white">
                        Quản lý Bình luận
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <div class="flex-fill p-4">
            <nav class="navbar navbar-light bg-light mb-3">
                <span class="navbar-brand">@ViewData["Title"]</span>
            </nav>
            @RenderBody()
        </div>
    </div>

    <!-- Bootstrap Bundle JS (Popper + bootstrap.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-…"
            crossorigin="anonymous"></script>

    <!-- Collapse.js -->
    <script src="~/js/collapse.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
