<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.PhuongLink_HaNoi" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize thêm nếu cần -->
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.PhuongLink_HaNoi.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Hiển thị full‐screen drawable loading -->
        <item name="android:windowBackground">@drawable/loading</item>
        <!-- Ẩn title bar -->
        <item name="android:windowNoTitle">true</item>
        <!-- Fullscreen (ẩn status bar nếu muốn) -->
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
