<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.phuonglink_hanoi"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PhuongLink_HaNoi"
        tools:targetApi="31">

        <!-- 1. Splash screen entry point -->
        <activity
            android:name=".LoadingActivity"
            android:exported="true"
            android:theme="@style/Theme.PhuongLink_HaNoi.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 2. Login screen -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.PhuongLink_HaNoi" />

        <!-- 3. Main screen (Bottom Navigation) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.PhuongLink_HaNoi" />

        <activity
            android:name=".ForgotPasswordActivity"
            android:label="Quên mật khẩu"
            android:parentActivityName=".LoginActivity">

        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Đăng k"
            android:parentActivityName=".LoginActivity">

        </activity>

    </application>

</manifest>
