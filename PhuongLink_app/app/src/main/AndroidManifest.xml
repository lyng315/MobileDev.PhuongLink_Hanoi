<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.phuonglink_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.PhuongLink_app">
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".FilterActivity"
            android:exported="false" /> <!-- MainActivity: màn hình khởi động (Launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- LoginActivity: màn hình đăng nhập -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" /> <!-- HomeActivity: màn hình chính sau khi đăng nhập -->
        <activity
            android:name=".HomeActivity"
            android:exported="true" /> <!-- ForgotPasswordActivity: màn hình quên mật khẩu -->
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="true" /> <!-- PostDetailActivity: màn hình chi tiết bài đăng (nếu có) -->
        <activity
            android:name=".PostDetailActivity"
            android:exported="true" />
    </application>

</manifest>