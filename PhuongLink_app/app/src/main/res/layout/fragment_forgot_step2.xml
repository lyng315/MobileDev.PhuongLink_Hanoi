<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app   ="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgot_verify_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#054DB3">

    <!-- Toolbar với nút back và title -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_verify"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#054DB3"
        android:title="Quên mật khẩu"
        android:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Header: logo + tên app -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="64dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="263dp"
            android:layout_height="131dp"
            android:contentDescription="Logo Hà Nội"
            android:src="@drawable/hanoi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="PhuongLink_HaNoi"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Background panel trắng bo tròn -->
    <View
        android:id="@+id/panelBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_panel"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Card giữa: Nhập mã xác thực -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:translationY="-24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="@id/panelBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width ="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 1. Icon check thành công -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_check_circle"

                android:contentDescription="Xác nhận"
                android:layout_gravity="center"/>

            <!-- 2. Tiêu đề chính -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kiểm tra email của bạn"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="8dp"/>

            <!-- 3. Thông báo phụ -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã xác thực đã được gửi tới email 25***@e.tlu.edu.vn"
                android:textColor="#666666"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>

            <!-- 4. Input mã xác thực -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập mã xác thực"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:padding="12dp"
                    android:contentDescription="Mã xác thực"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 5. Gửi lại mã -->
            <TextView
                android:id="@+id/tvResendCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gửi lại mã"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="end"
                android:clickable="true"
                android:focusable="true"/>

            <!-- 6. Nút Trở về / Tiếp tục -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnBackCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trở về" />

                <Button
                    android:id="@+id/btnNextCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiếp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
