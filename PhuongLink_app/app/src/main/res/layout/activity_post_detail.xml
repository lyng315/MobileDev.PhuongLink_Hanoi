<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/post_detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. HEADER (LinearLayout giống Home) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/bg_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- NÚT BACK (option): nếu cần, bạn có thể bấm để finish Activity -->

        <!-- Logo Hà Nội -->

        <!-- Tên app (màu trắng) -->
        <ImageView
            android:id="@+id/imgHeaderLogo"
            android:layout_width="113dp"
            android:layout_height="88dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/desc_logo"
            android:src="@drawable/hanoi" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="PhuongLink_HaNoi"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- 2. ProgressBar hiển thị khi đang tải dữ liệu -->
    <ProgressBar
        android:id="@+id/progressBarDetail"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 3. NestedScrollView chứa nội dung chi tiết bài đăng -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView_post_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Tiêu đề bài đăng -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <!-- Mức độ -->
            <TextView
                android:id="@+id/tvUrgency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mức độ: 2"
                android:textSize="14sp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginTop="4dp"/>

            <!-- Thời gian tạo -->
            <TextView
                android:id="@+id/tvCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian tạo: 02/06/2025 01:14"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp"/>

            <!-- Trạng thái -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: Published"
                android:textSize="14sp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>

            <!-- Lần chỉnh sửa cuối -->
            <TextView
                android:id="@+id/tvEditedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã sửa lần cuối: 02/06/2025 02:00"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp"
                android:visibility="gone"/>

            <!-- Tác giả -->
            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tác giả: user10"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>

            <!-- Category -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại bài: category10"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp"
                android:visibility="gone"/>

            <!-- Khu vực -->
            <TextView
                android:id="@+id/tvRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khu vực: region10"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp"
                android:visibility="gone"/>

            <!-- Ảnh chi tiết (nếu có) -->
            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                android:contentDescription="Post Image"/>

            <!-- Nội dung chi tiết -->
            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung chi tiết bài đăng…"
                android:textSize="16sp"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 4. Bottom Navigation cố định dưới cùng -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_post_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
